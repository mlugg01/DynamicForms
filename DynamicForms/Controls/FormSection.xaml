<UserControl x:Class="DynamicForms.Controls.FormSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamicForms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="LayoutRoot" Background="White" Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border x:Name="SectionNameBorder"
                BorderBrush="Silver"
                Background="LightGray"
                BorderThickness="0,0,0,1">
            <TextBlock x:Name="lblSectionHeader"
                       Text="Section Name"
                       FontWeight="Bold"
                       FontSize="20"
                       Margin="5"/>
        </Border>
        <Grid x:Name="ControlGrid"
              Grid.Row="1"
              Margin="20,8,8,8"/>
    </Grid>
</UserControl>
