<Window x:Class="DynamicForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicForms"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnGenerateConfig"
                Content="Generate Config"
                Style="{StaticResource ButtonHorizontalStretchAlignedStyle}"
                Margin="20"
                Width="150" 
                Click="btnGenerateConfig_Click"/>
        <Button x:Name="btnLaunchForm"
                Content="Launch Form"
                Grid.Column="1"
                Style="{StaticResource ButtonHorizontalStretchAlignedStyle}"
                Margin="20"
                Width="150"
                Click="btnLaunchForm_Click"/>
    </Grid>
</Window>
